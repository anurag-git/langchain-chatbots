# =================================================================
# CHATBOT APPLICATION ENVIRONMENT VARIABLES
# Copy this file to .env and update the values for your environment
# =================================================================

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================
APP_NAME=ChatBotX
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
# Options: development, staging, production

# Debug and development settings
DEBUG=true
VERBOSE_LOGGING=false

# =================================================================
# AI MODEL CONFIGURATION
# =================================================================
# Primary AI Model Settings
AI_MODEL_NAME=llama3.2
AI_MODEL_TEMPERATURE=0.7
AI_MODEL_MAX_TOKENS=1500
AI_MODEL_TIMEOUT=30.0

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_TIMEOUT=60.0

# OpenAI Configuration (if using OpenAI API)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Anthropic Configuration (if using Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_BASE=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///chatbot.db
# For PostgreSQL: postgresql://username:password@localhost:5432/chatbot_db

# Connection Pool Settings
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_ECHO=false

# =================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FILE=logs/chat_logs.txt
ERROR_LOG_FILE=logs/error_logs.txt
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=detailed
# Options: simple, detailed, json

# Console logging
LOG_TO_CONSOLE=true

# =================================================================
# STREAMLIT CONFIGURATION
# =================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# UI Configuration
UI_PAGE_TITLE=AI Chatbot
UI_LAYOUT=wide
UI_THEME=light
# Options: light, dark, auto

# =================================================================
# API CONFIGURATION
# =================================================================
# API timeouts and retries
API_TIMEOUT=30.0
API_MAX_RETRIES=3
API_BACKOFF_FACTOR=1.0

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_MINUTE=50

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# API Keys and Authentication
API_KEY_REQUIRED=false
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_for_sessions_here

# CORS Settings
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:8501,http://127.0.0.1:8501
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Encryption
ENCRYPT_LOGS=false
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =================================================================
# MONITORING AND HEALTH CHECKS
# =================================================================
# Metrics and monitoring
METRICS_ENABLED=true
HEALTH_CHECKS_ENABLED=true
HEALTH_CHECK_INTERVAL=60
METRICS_RETENTION_HOURS=72

# Performance monitoring
PERFORMANCE_MONITORING=true
RESPONSE_TIME_THRESHOLD=5.0
ERROR_RATE_THRESHOLD=0.05

# System resource monitoring
SYSTEM_MONITORING=true
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
DISK_THRESHOLD=80

# =================================================================
# ALERTING AND NOTIFICATIONS
# =================================================================
# Email alerts
ALERTS_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_or_app_password
ALERT_EMAIL_RECIPIENTS=admin@company.com,dev@company.com

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts
SLACK_USERNAME=ChatBot-Alert

# Error thresholds for alerts
ALERT_ERROR_THRESHOLD=0.01
ALERT_RESPONSE_TIME_THRESHOLD=2.0

# =================================================================
# EXTERNAL SERVICES
# =================================================================
# Analytics and tracking
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Content delivery
CDN_URL=
STATIC_FILES_URL=

# Third-party integrations
WEBHOOK_ENDPOINTS=
EXTERNAL_API_KEYS=

# =================================================================
# BACKUP AND STORAGE
# =================================================================
# File storage
STORAGE_TYPE=local
# Options: local, s3, gcs, azure

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=chatbot-storage
AWS_S3_ENDPOINT_URL=

# Google Cloud Storage (if using GCS)
GCS_BUCKET=chatbot-storage
GCS_KEY_FILE=path/to/service-account-key.json

# Backup settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=chatbot-backups

# =================================================================
# DEVELOPMENT AND TESTING
# =================================================================
# Development settings
DEV_RELOAD=true
DEV_DEBUG_TOOLBAR=false
DEV_PROFILER=false

# Testing configuration
TEST_DATABASE_URL=sqlite:///test_chatbot.db
TEST_REDIS_URL=redis://localhost:6379/1
TEST_LOG_LEVEL=WARNING
TEST_PARALLEL=false

# Mock services for testing
MOCK_AI_SERVICE=false
MOCK_EXTERNAL_APIS=false

# =================================================================
# PERFORMANCE TUNING
# =================================================================
# Worker and thread settings
MAX_WORKERS=4
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30.0

# Memory and resource limits
MAX_MEMORY_USAGE=1024
MAX_CPU_USAGE=80

# Connection pooling
CONNECTION_POOL_SIZE=20
CONNECTION_POOL_MAX_OVERFLOW=30
CONNECTION_POOL_TIMEOUT=30

# =================================================================
# EXPERIMENTAL FEATURES
# =================================================================
# Feature flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_A_B_TESTING=false
ENABLE_REAL_TIME_CHAT=false

# Beta features
BETA_UI_FEATURES=false
BETA_AI_MODELS=false

# =================================================================
# COMPLIANCE AND AUDIT
# =================================================================
# Data retention and privacy
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30
AUDIT_LOGGING=false
GDPR_COMPLIANCE=false

# PII handling
MASK_PII_IN_LOGS=true
ENCRYPT_USER_DATA=false
ANONYMIZE_ANALYTICS=true

# =================================================================
# DOCKER AND DEPLOYMENT
# =================================================================
# Docker-specific settings
DOCKER_ENV=false
CONTAINER_NAME=chatbot-app
CONTAINER_RESTART_POLICY=unless-stopped

# Health check settings for containers
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =================================================================
# LOAD BALANCING AND SCALING
# =================================================================
# Load balancer settings
LOAD_BALANCER_ENABLED=false
STICKY_SESSIONS=false
SESSION_AFFINITY=none

# Auto-scaling
AUTO_SCALING=false
MIN_INSTANCES=1
MAX_INSTANCES=5
TARGET_CPU_UTILIZATION=70

# =================================================================
# CUSTOM CONFIGURATION
# =================================================================
# Add any custom environment variables for your specific deployment
CUSTOM_CONFIG_1=
CUSTOM_CONFIG_2=
CUSTOM_CONFIG_3=

# =================================================================
# NOTES AND DOCUMENTATION
# =================================================================
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique values for all passwords and API keys
# 3. Regularly rotate API keys and secrets
# 4. Use environment-specific configurations for different deployments
# 5. Test all configurations in a staging environment before production
# 6. Monitor resource usage and adjust limits accordingly
# 7. Enable appropriate security measures for production environments
# =================================================================
